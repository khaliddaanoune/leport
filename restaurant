        function redirect(stars) {
            if (stars === 5) {
                window.location.href = "https://maps.app.goo.gl/43hBLkNZjE1eCyQp6?review=1";
            } else {
                window.location.href = "https://forms.gle/hVu5ibw9KZH94EXH8";
            }
